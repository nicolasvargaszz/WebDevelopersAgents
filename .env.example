# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=postgresql://user:password@localhost:5432/automation
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# ===========================================
# GITHUB CONFIGURATION
# ===========================================
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
GITHUB_USERNAME=your-github-username
GITHUB_ORG=your-organization-or-leave-empty
GITHUB_PAGES_DOMAIN=your-username.github.io

# ===========================================
# AI / OPENAI CONFIGURATION
# ===========================================
# Option 1: OpenAI Direct
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Option 2: Azure OpenAI (Recommended - uses student credits)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
AZURE_OPENAI_DEPLOYMENT=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-01

# Which provider to use: 'openai' or 'azure'
AI_PROVIDER=azure

# ===========================================
# EMAIL CONFIGURATION (Resend)
# ===========================================
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
FROM_EMAIL=contacto@yourdomain.com
FROM_NAME=Tu Nombre o Empresa
REPLY_TO_EMAIL=respuestas@yourdomain.com

# ===========================================
# WHATSAPP / TWILIO CONFIGURATION
# ===========================================
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_WHATSAPP_NUMBER=+14155238886
MY_WHATSAPP_NUMBER=+521234567890

# ===========================================
# GOOGLE MAPS / SCRAPING
# ===========================================
# Official Google Maps API (optional, for geocoding)
GOOGLE_MAPS_API_KEY=AIzaSyxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Outscraper API (alternative scraping service)
OUTSCRAPER_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Scraping Settings
SCRAPE_DELAY_SECONDS=2
MAX_RESULTS_PER_QUERY=50
HEADLESS_BROWSER=true

# ===========================================
# TRACKING & ANALYTICS
# ===========================================
TRACKING_DOMAIN=https://track.yourdomain.com
TRACKING_SECRET_KEY=your-random-secret-key-for-signing
ENABLE_TRACKING_PIXEL=true

# ===========================================
# REDIS / QUEUE CONFIGURATION
# ===========================================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ===========================================
# DEPLOYMENT TARGETS
# ===========================================
# Primary: GitHub Pages
# Secondary: Vercel
VERCEL_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
VERCEL_ORG_ID=team_xxxxxxxxxxxx

# Tertiary: Netlify
NETLIFY_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
NETLIFY_SITE_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# ===========================================
# FEATURE FLAGS
# ===========================================
ENABLE_WHATSAPP_OUTREACH=false
ENABLE_AI_COPY_GENERATION=true
ENABLE_SCREENSHOT_MOCKUPS=true
ENABLE_EMAIL_TRACKING=true

# ===========================================
# RATE LIMITS & QUOTAS
# ===========================================
MAX_DAILY_DISCOVERIES=500
MAX_DAILY_GENERATIONS=100
MAX_DAILY_OUTREACH=50
MAX_FOLLOW_UPS_PER_BUSINESS=2

# ===========================================
# BUSINESS LOGIC
# ===========================================
MIN_SCORE_FOR_OUTREACH=50
MIN_REVIEWS_FOR_QUALIFICATION=5
FOLLOW_UP_DELAY_DAYS=3
ARCHIVE_AFTER_DAYS=30

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=INFO
LOG_FORMAT=json
SENTRY_DSN=https://xxxx@sentry.io/xxxx

# ===========================================
# ENVIRONMENT
# ===========================================
ENVIRONMENT=development
DEBUG=true
